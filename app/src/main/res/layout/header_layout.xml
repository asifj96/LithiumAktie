<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGrey"
        android:gravity="center"
        android:fontFamily="@font/dm_sans_medium"
        android:textSize="16sp"
        android:paddingVertical="@dimen/_12sdp"
        android:text="@string/header_link"
        android:textColor="@color/colorCyn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cLStrongBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:background="@drawable/header_background"
        android:elevation="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="@string/string2"
            android:fontFamily="@font/zilla_slab_medium"
            android:textSize="18sp"
            android:textColor="@color/colorDarkCyn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvStrongBuy"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:fontFamily="@font/dm_sans_medium"
            android:textSize="12sp"
            android:text="@string/strong"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvDate"
        android:fontFamily="@font/zilla_slab_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/aktientipp_am_09_21_2022"
        android:textSize="18sp"
        android:textColor="@color/colorDarkCyn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cLStrongBuy" />


</androidx.constraintlayout.widget.ConstraintLayout>