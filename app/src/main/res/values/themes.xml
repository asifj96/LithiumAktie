<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LithiumAktie" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorDarkCyn</item>
        <item name="colorPrimaryVariant">@color/colorWhite</item>
        <item name="colorOnPrimary">@color/colorDarkGrey</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="startAppTheme" parent="Theme.LithiumAktie">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/start_app_drawable</item>
    </style>

    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active
        </item>
        <item name="itemTextAppearanceInactive">
            @style/TextAppearance.BottomNavigationView.Inactive
        </item>
    </style>
    <!-- blank styles for better code readability-->
    <style name="TextAppearance" />

    <style name="TextAppearance.BottomNavigationView" />
    <!-- inactive tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
    </style>

    <!-- active tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="fontFamily">@font/dm_sans_medium</item>
    </style>


    <style name="parentTextViewDmSans" parent="Theme.LithiumAktie">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="fontStyle">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="parentTextViewZilla" parent="Theme.LithiumAktie">
        <item name="fontFamily">@font/zilla_slab_regular</item>
        <item name="fontStyle">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="fontWeight">500</item>
    </style>

